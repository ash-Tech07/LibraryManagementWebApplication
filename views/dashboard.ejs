<%- include('partials/header') %>
<link rel="stylesheet" href="/css/dashboard-styles.css">

    <div class="wrapper">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="borrow-tab" data-bs-toggle="tab" data-bs-target="#borrow" type="button" role="tab" aria-controls="borrow" aria-selected="true" onclick="responsiveReloadTab();">Borrow Books</button>
            </li>
            
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false" onclick="responsiveReloadTab();">Pending Books</button>
            </li>
        
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="borrowed-tab" data-bs-toggle="tab" data-bs-target="#borrowed" type="button" role="tab" aria-controls="borrowed" aria-selected="false" onclick="responsiveReloadTab();">Borrowed Books</button>
            </li>
        </ul>
      
        <div class="tab-content" id="myTabContent">
    
            <div class="tab-pane fade show active" id="borrow" role="tabpanel" aria-labelledby="borrow-tab">
                
                <h1 class="mt-3 ms-auto me-auto dashboard-heading">Search over 10,000+ books</h1>
                <!-- MAIN SEARCH-BAR -->
                <form action="/dashboard" method="post">
                    <div class="input-group mt-4 ms-auto me-auto search-bar">
                        <button id="dropdownText" class="btn dropdown-toggle dashboard-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false"> <%= searchConfig[0]['searchTag'] %> </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" onclick="dropDownTextToggle('Book Name')" class="dropdown-item">Book Name</a></li>
                            <li><a href="#" onclick="dropDownTextToggle('Author Name')" class="dropdown-item">Author Name</a></li>
                            <li><a href="#" onclick="dropDownTextToggle('ISBN')" class="dropdown-item">ISBN</a></li>
                            <li><a href="#" onclick="dropDownTextToggle('Genre')" class="dropdown-item">Genre</a></li>
                        </ul>
                        <input class="searchBarInp" type="text" name="searchFactor" id="disabledSearchFactor" value="<%= searchConfig[0]['searchTag'] %>">
                        <input type="text" class="form-control" name="searchBar" placeholder="Example: 12 Rules to Learn to Code...." value="<%= searchConfig[0]['searchBarText'] %>">
                        <button class="btn btn-outline-secondary dashboard-btn" type="submit">  Go  </button>
                    </div>
                </form>
    
    
                <!-- RESULTS TABLE  -->
                <div class="table-responsive-lg">
                    <table class="table table-striped table-hover mt-5 ms-auto me-auto table-bordered tables">
                        <thead>
                            <tr>
                                <th>S. NO</th>
                                <th>Book Name</th>
                                <th>Authors</th>
                                <th>Year</th>
                                <th>Genre</th>
                                <th>Price</th>
                                <th>ISBN</th>
                                <th>Availability</th>
                                <th>Borrow</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                        <% if (searchData) { %>
                            <% let pageOffset = 10; %>
                            <% let x = (tot_count[1]-1) * pageOffset;%>
                            <% for (let data in searchData){ %>
                                <tr id="<%= searchData[data]['isbn'] %>A">
                                <td><%= x+1 %></td>
                                <td><%= searchData[data]['name'] %></td>
                                <td><%= searchData[data]['author'] %></td>
                                <td><%= searchData[data]['publication_date'].substring(0, 4) %></td>
                                <td style="text-align: center;"><%= searchData[data]['genre'] %></td>
                                <td><%= "₹" + searchData[data]['price'] %></td>
                                <td><%= searchData[data]['isbn'] %></td>
                                <% if (searchData[data]['noOfCopies'] >= 1 ) { %>
                                    <td style="text-align: center;">Yes</td>
                                    <td><button class="btn btn-outline-secondary" id="<%= searchData[data]['isbn'] %>" type="button" onclick="addBook(this.id)">Lend</button></td>
                                <% } else { %>
                                    <td style="text-align: center;">No</td>
                                    <td><button class="btn btn-outline-secondary" type="button" disabled>Lend</button></td>
                                <% } %>
                                </tr>
                        <% x+=1 } } %>
                        </tbody>
                    </table>
                    <% if (searchConfig[0]['noOfSearchResults'] <= 0) { %>
                        <p class="ms-auto me-auto mt-2 dashboard-warning"> Oops! No books found. </p>
                    <% } %>
    
                </div>
    
                
                
                <div class="page">
    
                    <nav>
                        <ul class="pagination justify-content-center" id="<%= tot_count[0] %>">
                            <% if (tot_count[1] == 1) { %>
                                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1"aria-disabled="true">Previous</a></li>
                            <% } else { %>
                                <li class="page-item"><a class="page-link" href="/dashboard?page=<%= Number(tot_count[1])-1 %>">Previous</a></li>
                            <% } %>
    
                            <div class="pages" id="">
                                <% if (tot_count[0] != 0) { %>
                                    <% for(let i = 1; i <= tot_count[0]; i++) { %>
                            
                                        <% if (tot_count[1] == i) { %>
                                            <li class="page-item active" id="pg<%= i %>"><a class="page-link" href="/dashboard?page=<%= i %>"><%= i %></a></li>
                                        <% } else { %>
                                            <li class="page-item" id="pg<%= i %>"><a class="page-link" href="/dashboard?page=<%= i %>"><%= i %></a></li>
                                        <% } %>
        
                                <% } } %>
                            </div>
                            
    
    
                            <% if (tot_count[0] == tot_count[1]) { %>
                                <li class="page-item disabled"><a class="page-link"  id="next_btn">Next</a></li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" id="next_btn" href="/dashboard?page=<%= Number(tot_count[1])+1 %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
    
                    </nav>
                </div>
                
                
            
    
                <!-- SELECTED BOOKS TABLE  -->
                <h1 class="mt-5 ms-auto me-auto dashboard-heading" id="selectedBooksHeading">Selected Books</h1>
                <table class="table table-striped table-hover mt-3 ms-auto me-auto table-bordered tables" id="selectedTable">
                    <thead>
                        <tr>
                            <th>Book Name</th>
                            <th>Author</th>
                            <th>Year</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>ISBN</th>
                        </tr>
                    </thead>
                    <tbody id="selectedTableBody" ></tbody>
                </table>
    
                <!-- SUBMIT BUTTON -->
                <div class="text-center mb-5" id="lend_btn">
                    <form action="/confirmBooks" method="post" id="bookLend">
                        <input type="text" name="booksSelected" id="booksSelectedInp" style="display: none;">
                        <button class="btn dashboard-btn" type="submit">Lend Books</button>
                    </form>
                </div>
    
            </div>
    
    
            <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
    
                <!-- CURRENTLY BORROWED BOOKS -->
                <h1 class="mt-5 ms-auto me-auto dashboard-heading">Currently Borrowed Books</h1>
    
                <table class="table table-striped table-hover mt-2 ms-auto me-auto table-bordered tables">
                    <thead>
                        <th>S. NO</th>
                        <th>Book Name</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Year</th>
                        <th>Genre</th>
                        <th>Date Borrowed</th>
                        <th>Price</th>
                
                    </thead>
                    <tbody>
                        <% if (currBooksData) { %>
                            <% let i = 1; %>
                            <% for(let isbn in currBooksData) { %>
                                <tr>
                                    <td><%= i %></td>
                                    <td><%= currBooksData[isbn]['name'] %></td>
                                    <td><%= currBooksData[isbn]['author'] %></td>
                                    <td><%= isbn %></td>
                                    <td><%= currBooksData[isbn]['publication_date'].substring(0, 4) %></td>
                                    <td><%= currBooksData[isbn]['genre'] %></td>
                                    <td><%= currBooksData[isbn]['dateBorrowed'] %></td>
                                    <td><%= "₹" + currBooksData[isbn]['price'] %></td>    
                                </tr>
                        <% i++; } } %>
                    </tbody>
                </table>
    
            </div>
    
    
            <div class="tab-pane fade" id="borrowed" role="tabpanel" aria-labelledby="borrowed-tab">
    
                <!-- PREVIOUSLY BORROWED BOOKS TABLE -->
                <h1 class="mt-5 ms-auto me-auto dashboard-heading">Previously Borrowed Books</h1>
                <table class="table table-striped table-hover mt-5 ms-auto me-auto tables table-bordered" style="max-width: 90vw; text-align: center;">
                    <thead>
                        <tr>
                            <th>S. NO</th>
                            <th>Book Name</th>
                            <th>Author</th>
                            <th>Year</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>ISBN</th>
                            <th>Date Borrowed</th>
                            <th>Date Returned</th>
                            <th>Fine</th>
                        </tr>
                    </thead>
    
                    <% if (prevBooksData) { %>
                        <% let i = 1; %>
                        <% for (let data in prevBooksData){ %>
                    
                            <tbody>
                                <tr>
                                    <td>
                                        <%= i %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['name'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['author'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['publication_date'].substring(0, 4) %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['genre'] %>
                                    </td>
                                    <td>
                                        <%= "₹" + prevBooksData[data]['price'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['isbn'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['dateBorrowed'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['dateReturned'] %>
                                    </td>
                                    <td>
                                        <%= prevBooksData[data]['fine'] %>
                                    </td>
                                </tr>
                            </tbody>
                        <% i++; } } %>
                </table>
            </div>
    
        </div>
    </div>

    



    


    
        

        
    <script src="/dashboard-script.js" type="text/javascript"></script>

        
<%- include('partials/footer') %>

